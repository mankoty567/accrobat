<resources>
    <!-- Basic secure input theme. -->
    <style name="til_secure_style">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="android:thumbTint">@color/gray_text</item>
    </style>

    <style name="tiet_secure_style">
        <item name="android:backgroundTint">@color/light_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="message_secure_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_button</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="error_secure_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/red_error</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>