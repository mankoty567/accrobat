<resources>
    <!-- Base list theme. -->
    <style name="background_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/light_background</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="vertical_element_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="image_list">
        <item name="android:layout_width">63dp</item>
        <item name="android:src">@drawable/loading</item>
        <item name="android:layout_height">63dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ll_left_element_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="ll_right_element_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="title_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Medium Text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="blue_subtitle_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_button</item>
    </style>

    <style name="green_subtitle_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/green</item>
    </style>
</resources>