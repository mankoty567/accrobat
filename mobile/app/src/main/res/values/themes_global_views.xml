<resources>
    <!-- Base linear layout theme. -->
    <style name="ll_base_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!-- Base logo theme -->
    <style name="image_logo_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <!-- Base title theme -->
    <style name="title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">30dp</item>
    </style>

    <!-- Base second title theme -->
    <style name="second_title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">15dp</item>
    </style>

    <!-- Base progress bar theme. -->
    <style name="progress_bar_style">
        <item name="android:thumbTint">@color/blue_button</item>
        <item name="android:progressTint">@color/gray_text_disabled</item>
        <item name="android:progressBackgroundTint">@color/gray_text</item>
    </style>

    <!-- Base logo mode theme. -->
    <style name="logo_mode_style">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- Base button theme. -->
    <style name="submit_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:backgroundTint">@color/blue_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="submit_no_margin_width_match_parent_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:backgroundTint">@color/blue_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="submit_subscribe_blue_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:backgroundTint">@color/blue_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="submit_subscribe_green_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
    </style>
</resources>