<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ui.home.SignupFragment"
    android:paddingBottom="55dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/txt_signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_signup"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/framelayout_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearlayout_signup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_login" />

            <EditText
                android:id="@+id/et_signup_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="login" />

            <TextView
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_password" />

            <EditText
                android:id="@+id/et_signup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mot de passe" />

            <TextView
                android:id="@+id/txt_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_confirmation" />

            <EditText
                android:id="@+id/et_signup_password_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="confirmation mot de passe" />

            <TextView
                android:id="@+id/txt_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_mail" />

            <EditText
                android:id="@+id/et_signup_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mail"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearlayout_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/framelayout_signup"
            android:gravity="center"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/btn_signup_back_to_connection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_back"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btn_signup_send_inscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_send_inscription"
                android:layout_marginLeft="10dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>